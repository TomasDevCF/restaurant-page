---
import Layout from "../../layouts/Layout.astro";

const isLogged = Astro.cookies.has("isLogged");

if (isLogged) {
  return Astro.redirect("/admin/home");
}

if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const userCode = formData.get("code") as string;
    const envCode = import.meta.env.LOGIN_FORM_CODE as string;
    if (userCode == envCode) {
      Astro.cookies.set("isLogged", "true", {
        path: "/",
        maxAge: 60 * 60 * 24 * 30,
      });
      return Astro.redirect("/admin/home");
    } else {
      console.log("No es igual");
    }
  } catch (error) {
    console.log(error);
  }
}
