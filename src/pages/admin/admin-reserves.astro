---
import AdminLayout from "../../layouts/AdminLayout.astro";
import ReservasSection from "../../components/ReservasSection";

if (Astro.request.method === "POST") {
  try {
    Astro.cookies.set("isLogged", "false", {
      path: "/",
      maxAge: 60 * 60 * 24 * 30,
    });
    return Astro.redirect("/admin/login");
  } catch (error) {
    console.error(error);
  }
}
---

<AdminLayout
  header="Reservas para hoy"
  title="Reservas para hoy | Los Cabritos"
  keywords=""
>
  <ReservasSection client:load />
</AdminLayout>
